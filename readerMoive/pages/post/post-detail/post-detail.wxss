.container {
  display: flex;
  flex-direction: column;
}
.head-image {
  width: 100%;
  height: 460rpx;
}
.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: .6;
  border-radius: 50%;
}
.author-date {
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
}
.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}
.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
}
.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  margin-left: 30rpx;
}
.horizon {
  width: 660rpx;
  height: 2px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  top: 46rpx;
  z-index: -99;
}
.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}
