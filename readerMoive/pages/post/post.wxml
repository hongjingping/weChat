<!-- vertical='true'竖向滚动  -->
<!--import引入template  -->
<import src="post-item/post-item-template"/>
<view>
  <swiper catchtap = "onSwiperTap" vertical='{{ false }}' indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image bindtap='onSwiperItemTap' src="/images/kt2.jpg" data-postId="2"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/kt3.jpg" data-postId="3"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/kt4.jpg" data-postId="4"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{ post_content }}" wx:for-item = "item" wx:for-index = "idx">
    <!--template模板可以使用到多处  data-postId传postId-->
    <view catchtap = "onPostTap" data-postId="{{ item.postId }}">
      <template is="postItem" data="{{ ...item }}" />
    </view>
  </block>
</view>