@import '../movie-template/movie.wxss';
.movie-list-container {
  background-color: #FFF;
  display: flex;
  flex-direction: column;
}
.inner-container {
  margin: 0 auto 20rpx;
}
.movie-head {
  padding: 30rpx 20rpx 22rpx;
}
.slogan {
  font-size: 24rpx;
}
 .more {
  float: right;
} 
.more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}
.more-img {
  width: 9px;
  height: 16px;
  vertical-align: middle;
}
.movies-container {
  display: flex;
  flex-direction: row;
}