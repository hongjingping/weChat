page {
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar {
  width: 200rpx; 
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}
.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0 200rpx;
}
.moto-container {
  border: 1px solid #405f80;
  width: 300rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  line-height: 80rpx;
}
.moto {
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}